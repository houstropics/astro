---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import sportplatzPic from '../images/sportplatz.png';
import tennisPic from '../images/tennis.png';
import kartePic from '../images/karte.png';
import badmintonPic from '../images/badminton.svg';
import tennisPic2 from '../images/tennis.svg';
import volleyPic from '../images/volleyball.svg';
import triathlonPic from '../images/triathlon.svg';
import schwimmenPic from '../images/schwimmen.svg';
import leichtathletikPic from '../images/leichtathletik.svg';
import bogenschützenPic from '../images/bogenschützen.svg';
import sportschützenPic from '../images/sportschützen.svg';
import fussballPic from '../images/fussball.svg';
import yoseikanPic from '../images/yoseikan.svg';

---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>ASV Mals</title>
    <!-- Include global CSS first -->
    <style is:global>
        @import '../styles/global.css'; 
      </style>

    <!-- Then include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
   
    <Header></Header>

    <!-- Main Content Area 
     <div class="relative ml-7">
            <div class="text-4xl font-univermag text-primary">Kontakt</div>
        </div>
                    <div class="absolute left-7 text-lg md:text-xl lg:text-3xl mt-4 grid grid-cols-2 gap-x-8" style="bottom: 5%;">

    -->

    <div class="flex font-univermag">
        <div class="w-1/2 h-100 bg-primary flex flex-col text-white relative">
            <div class="w-full h-px bg-secondary mt-8"></div>
            <div class="relative ml-7 text-white">
                <div class="text-6xl font-univermag">Der Verein</div>
            </div>
    
            <div class="relative ml-7 grid grid-cols-2 gap-x-8" style="bottom: 20px; position: absolute; left: 0; right: 0;">
                <table class="text-5xl">
                    <tr>
                        <td id="count">850+</td>
                        <td class="font-oskari-g2 text-2xl uppercase ">Mitglieder</td>
                    </tr>
                    <tr>
                        <td>10</td>
                        <td class="font-oskari-g2 text-2xl uppercase">Sektionen</td>
                    </tr>
                    <tr>
                        <td>1965</td>
                        <td class="font-oskari-g2 text-2xl uppercase">gegründet</td>
                    </tr>
                </table>             
                
            </div>
        </div>
        <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
            <img src={sportplatzPic.src} alt="Sportplatz">
        </div>
    </div>
    
    <div class="flex font-univermag">
      
        <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
            <img src={tennisPic.src} alt="Tennisplatz">
        </div>
        <div class="w-1/2 h-100 bg-primary flex flex-col text-white relative">
            <div class="w-full h-px bg-secondary mt-8"></div>
            <div class="relative ml-7 text-white">
                <div class="text-6xl font-univermag">Infos</div>
            </div>
    
            <div class="relative ml-7 grid grid-cols-2 gap-x-8" style="bottom: 20px; position: absolute; left: 0; right: 0;">
                <table class="text-5xl">
                    <tr>
                        <td class="font-oskari-g2 text-2xl uppercase">Geschichte</td>
                    </tr>
                    <tr>
                        <td class="font-oskari-g2 text-2xl uppercase">Vorstand</td>
                    </tr>
                    <tr>
                        <td class="font-oskari-g2 text-2xl uppercase">Downloads</td>
                    </tr>
                </table>
                         
                
            </div>
        </div>
    </div>    



<div class="flex font-univermag">
    <div class="w-1/2 h-100 bg-primary flex flex-col text-white relative">
        <div class="w-full h-px bg-secondary mt-8"></div>
        <div class="relative ml-7 text-white">
            <div class="text-6xl font-univermag">Sektionen</div>
        </div>

        <div class="relative ml-7 grid grid-cols-2 gap-x-8" style="bottom: 20px; position: absolute; left: 0; right: 0;">
            <ul class="font-oskari-g2 text-2xl uppercase mt-8">
                <li class="mb-4">
                    <a href="/fussball" class="flex items-center">
                        <img src={fussballPic.src} alt="Fussball" class="inline-block mr-14" >
                        Fussball
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={badmintonPic.src} alt="Badminton" class="inline-block mr-14">
                        Badminton
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={tennisPic2.src} alt="Tennis" class="inline-block mr-14">
                        Tennis
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={sportschützenPic.src} alt="Sportschützen" class="inline-block mr-14">
                        Sportschützen
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={triathlonPic.src} alt="Triathlon" class="inline-block mr-14">
                        Triathlon
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={yoseikanPic.src} alt="Yoseikan Budo" class="inline-block mr-14">
                        Yoseikan Budo
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={bogenschützenPic.src} alt="Bogenschützen" class="inline-block mr-14">
                        Bogenschützen
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={volleyPic.src} alt="Volleyball" class="inline-block mr-14">
                        Volleyball
                    </a>
                </li>
                <li class="mb-4">
                    <a href="#" class="flex items-center">
                        <img src={leichtathletikPic.src} alt="Leichtathletik" class="inline-block mr-14">
                        Leichtathletik
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center">
                        <img src={schwimmenPic.src} alt="Schwimmen" class="inline-block mr-14">
                        Schwimmen
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
        <img src={kartePic.src} alt="Sportplatz" style="max-width: 100%; height: auto;">
    </div>
</div>

    



    <section class="Kontakt">
        <!-- Kontakt Section -->
        <div class="w-full h-0.5 bg-primary mt-14"></div>
    
        <div class="relative ml-7">
            <div class="text-6xl font-univermag text-primary">Kontakt</div>
        </div>
    
        <div class="w-full h-0.5 bg-primary mt-20"></div>
        <div class="relative ml-7">
            <table class="border-collapse border-transparent font-oskari-g2 text-primary">
                <tr>
                    <td class="pr-20 uppercase font-bold">Telefon</td>
                    <td>+39 335 5921234</td>
                </tr>
                <tr>
                    <td class="pr-20 uppercase font-bold">Email</td>
                    <td>sportverein@mals.it</td>
                </tr>
            </table>
        </div>
        <div class="w-full h-0.5 bg-primary"></div>
    
        <div class="w-full h-0.5 bg-primary mt-8"></div>
        <div class="relative ml-7">
            <table class="border-collapse border-transparent font-oskari-g2 text-primary">
                <tr>
                    <td class="pr-8 uppercase font-bold">Pec</td>
                    <td>sportverein@pec.mals.it</td>
                </tr>
                <tr>
                    <td class="pr-8 uppercase font-bold">Adresse</td>
                    <td>Marktgasse 13, 39024 Mals im Vinschgau</td>
                </tr>
                <tr>
                    <td class="pr-8 uppercase font-bold">Steuernummer</td>
                    <td>82028500211</td>
                </tr>
                <tr>
                    <td class="pr-8 uppercase font-bold">Mwst.Nr.</td>
                    <td>01448330215</td>
                </tr>
            </table>
        </div>
        <div class="w-full h-0.5 bg-primary"></div>
    
        <div class="w-full h-0.5 bg-primary mt-8"></div>
        <div class="relative ml-7">
            <table class="border-collapse border-transparent font-oskari-g2 text-primary">
                <tr>
                    <td class="pr-24 uppercase font-bold">Social</td>
                    <td>Facebook</td>
                </tr>
            </table>
        </div>
        <div class="w-full h-0.5 bg-primary"></div>
        <div class="h-8"></div>
    </section>
    
    



    

    
    <Footer></Footer>

</body>
</html>

