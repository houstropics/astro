---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import sportplatzPic from '../images/sportplatz.png';
import tennisPic from '../images/tennis.png';
import kartePic from '../images/karte.png';
import badmintonPic from '../images/badminton.svg';
import tennisPic2 from '../images/tennis.svg';
import volleyPic from '../images/volleyball.svg';
import triathlonPic from '../images/triathlon.svg';
import schwimmenPic from '../images/schwimmen.svg';
import leichtathletikPic from '../images/leichtathletik.svg';
import bogenschützenPic from '../images/bogenschützen.svg';
import sportschützenPic from '../images/sportschützen.svg';
import fussballPic from '../images/fussball.svg';
import yoseikanPic from '../images/yoseikan.svg';

---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>ASV Mals</title>
    <!-- Include global CSS first -->
    <style is:global>
        @import '../styles/global.css'; 
      </style>

    <!-- Then include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
   
    <Header></Header>

    <!-- Main Content Area -->

    <div class="flex font-univermag">
        <div class="w-1/2 h-100 bg-primary flex flex-col items-center justify-center text-white relative">
            <div class="absolute left-0 right-0 h-px bg-secondary" style="top: 10%;"></div>
            <!-- Text "Der Verein" -->
            <div class="absolute left-7 text-4xl text-white" style="top: 12%;">Der Verein</div>
            <div class="absolute left-7 text-lg md:text-xl lg:text-3xl mt-4 grid grid-cols-2 gap-x-8" style="bottom: 5%;">
                <div id="count">850+</div>
                <div class="font-oskari-g2 uppercase text-sm flex items-center">
                    <span class="mr-1">Mitglieder</span>
                </div>
                <div>10</div>
                <div class="font-oskari-g2 uppercase text-sm flex items-center">
                    <span class="mr-1">Sektionen</span>
                </div>
                <div>1965</div>
                <div class="font-oskari-g2 uppercase text-sm flex items-center">
                    <span class="mr-1">gegründet</span>
                </div>
            </div>
        </div>
        <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
            <img src={sportplatzPic.src} alt="Sportplatz">
        </div>
    </div>

    <div class="flex font-univermag">
        <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
            <img src={tennisPic.src} alt="Tennisplatz">
        </div>
        <div class="w-1/2 h-100 bg-primary flex flex-col items-center justify-center text-white relative">
            <div class="absolute left-0 right-0 h-px bg-secondary" style="top: 10%;"></div>
            <div class="absolute left-7 text-4xl text-white" style="top: 12%;">Infos</div>
            <div class="absolute left-7 text-lg md:text-xl lg:text-3xl mt-4" style="bottom: 5%;">
                <div class="font-oskari-g2 uppercase text-sm mb-4">
                    <span class="mr-1">Geschichte</span>
                </div>
                <div class="font-oskari-g2 uppercase text-sm mb-4">
                    <span class="mr-1">Vorstand</span>
                </div>
                <div class="font-oskari-g2 uppercase text-sm">
                    <span class="mr-1">Downloads</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="flex font-univermag">
        <div class="w-1/2 h-100 bg-primary flex flex-col items-center justify-center text-white relative">
            <div class="absolute left-0 right-0 h-px bg-secondary" style="top: 10%;"></div>
            <!-- Text "Sektionen" -->
            <div class="absolute left-7 text-4xl text-white" style="top: 12%;">Sektionen</div>
            <!-- List of links with images -->
            <div class="absolute left-7 text-lg md:text-xl lg:text-3xl" style="top: 18%;">
                <ul class="font-oskari-g2 uppercase text-sm mb-4">
                    <li class="mb-4">
                        <a href="/fussball">
                            <img src={fussballPic.src} alt="Sportplatz" class="inline-block mr-2" style="margin-right: 8px;">
                            Fussball
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={badmintonPic.src} alt="Badminton-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Badminton
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={tennisPic2.src} alt="Tennis-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Tennis
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={sportschützenPic.src} alt="Sportschützen-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Sportschützen
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={triathlonPic.src} alt="Triathlon-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Triathlon
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={yoseikanPic.src} alt="Yoseikan-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Yoseikan Budo
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={bogenschützenPic.src} alt="Bogenschützen" class="inline-block mr-2" style="margin-right: 8px;">
                            Bogenschützen
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={volleyPic.src} alt="Volleyball-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Volleyball
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#">
                            <img src={leichtathletikPic.src} alt="Leichtathletik-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Leichtathletik
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <img src={schwimmenPic.src} alt="Schwimmen-Icon" class="inline-block mr-2" style="margin-right: 8px;">
                            Schwimmen
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
            <a href="#">
                <img src={kartePic.src} alt="Sportplatz" style="max-width: 100%; height: auto;">
            </a>
        </div>
    </div>


<!-- Kontakt Section -->
<div class="w-full h-px bg-primary mt-8"></div>

<div class="container mx-auto flex flex-col items-center">
  <div class="absolute left-7 text-4xl font-univermag text-primary">Kontakt</div>
</div>

<!-- Telefon and Email Section -->
<div class="w-full h-px bg-primary mt-16"></div> 
<div class="mt-2"></div>

<div class="container mx-auto">
  <div class="relative">
    <div class="font-oskari-g2 text-primary">
      Telefon: <span class="inline-block pl-9">+39 335 5921234</span>
    </div>
  </div>

  <div class="mt-2"></div>

  <div class="relative">
    <div class="font-oskari-g2 text-primary">  
      Email: <span class="inline-block pl-12">sportverein@mals.it</span>
    </div>
  </div>
</div>

<div class="mt-2"></div>
<div class="w-full h-px bg-primary mt-4"></div>

<!-- Additional Contact Information Section -->
<div class="mt-2"></div>

<div class="container mx-auto">
  <div class="relative">
    <div class="font-oskari-g2 text-primary">
      Pec: <span class="inline-block pl-9">sportverein@pec.mals.it</span>
    </div>
  </div>

  <div class="mt-2"></div>

  <div class="relative">
    <div class="font-oskari-g2 text-primary">
      Adresse: <span class="inline-block pl-12">martgasse 13, 39024 Mals im Vinschgau</span> 
    </div>
  </div>
  
  <div class="mt-2"></div>
  
  <div class="relative">
    <div class="font-oskari-g2 text-primary">
      Steuernummer: <span class="inline-block pl-12">82028500211</span>
    </div>
  </div>

  <div class="mt-2"></div>

  <div class="relative">
    <div class="font-oskari-g2 text-primary">
      Mwst.Nr.: <span class="inline-block pl-12">01448330215</span>
    </div>
  </div>
</div>

<div class="mt-2"></div> 

<div class="w-full h-px bg-primary mt-2"></div>


<div class="mt-2"></div>

<div class="container mx-auto">
  <div class="relative">
    <div class="font-oskari-g2 text-primary">
      Social: <span class="inline-block pl-9">Instagram</span>
      <span class="inline-block pl-9">Facebook</span>
    </div>
  </div>
</div>

<div class="mt-2"></div>
<div class="w-full h-px bg-primary mt-4"></div>


    

    
    <Footer></Footer>

</body>
</html>

