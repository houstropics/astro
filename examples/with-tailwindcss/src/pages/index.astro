    <meta name="generator" content={Astro.generator} />
    <title>Astro + TailwindCSS</title>
    <!-- Include global CSS first -->
    <style is:global>
        @import '../styles/global.css'; 
      </style>

    <!-- Then include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <!-- Header -->
    <header class="bg-primary text-white font-univermag py-0">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Logo or Site Title -->
            <div class="text-lg font-medium">ASV MALS</div>
            
            <!-- Navigation Links -->
            <nav>
                <ul class="flex space-x-4">
                    <li class="relative">
                        <a href="#" class="hover:text-gray-300">Setkionen</a>
                        <!-- Dropdown Menu -->
                        <ul class="absolute z-10 hidden bg-white border border-gray-200 py-2 mt-1 rounded-md">
                            <li><a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Fussball</a></li>
                            <li><a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Badminton</a></li>
