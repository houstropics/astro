---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Banner from '../images/bannerFussball.jpg';
import fussballPic from '../images/fussball.svg';


---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro + TailwindCSS</title>
    <!-- Include global CSS first -->
    <style is:global>
        @import '../styles/global.css'; 
      </style>

    <!-- Then include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

  <Header></Header>


  
  




    
    <div style="position: relative; max-height: 100vh;">
      <img
          src={Banner.src}
          alt="Jubel"
          style="width: 100%; height: 100vh; object-fit: cover; object-position: 50% 50%;"
      />
      <div style="position: absolute; bottom: 0; left: 0;">
          <table style="border-collapse: collapse; background-color: transparent;">
            <tr>
              <td style="padding-left: 28px; padding-bottom: 20px;">
                <img
                  src={fussballPic.src}
                  alt="Fussball"
                  style="width:100px;"
                  class="inline-block mr-14"
                />
              </td>

              <td>
                <div class="text-6xl font-univermag text-white">Fussball</div>
              </td>
            </tr>
          </table>
        </div>
    </div>


    <div class="flex font-univermag">
      <div class="w-1/2 h-100 bg-primary flex flex-col text-white relative">
          <div class="w-full h-px bg-secondary mt-8"></div>
          <div class="relative ml-7 text-white">
              <div class="text-6xl font-univermag">Infos</div>
          </div>

          <div class="relative ml-7 grid grid-cols-2 gap-x-8" style="bottom: 20px; position: absolute; left: 0; right: 0;">
              <table class="text-5xl">
                  <tr>
                      <td id="count">850+</td>
                      <td class="font-oskari-g2 text-2xl uppercase ">Mitglieder</td>
                  </tr>
                  <tr>
                      <td>10</td>
                      <td class="font-oskari-g2 text-2xl uppercase">Sektionen</td>
                  </tr>
                  <tr>
                      <td>1965</td>
                      <td class="font-oskari-g2 text-2xl uppercase">gegr√ºndet</td>
                  </tr>
              </table>                       
          </div>
      </div>
      <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
          <img src={Banner.src} alt="Sportplatz">
      </div>
  </div>

  <div class="flex font-univermag">
    
      <div class="w-1/2 h-100 bg-blue-500 flex items-center justify-center">
          <img src={Banner.src} alt="Tennisplatz">
      </div>
      <div class="w-1/2 h-100 bg-primary flex flex-col text-white relative">
          <div class="w-full h-px bg-secondary mt-8"></div>
          

          <div class="relative ml-7 grid grid-cols-2 gap-x-8" style="bottom: 20px; position: absolute; left: 0; right: 0;">
              <table class="text-5xl">
                  <tr>
                      <td class="font-oskari-g2 text-2xl uppercase">Geschichte</td>
                  </tr>
                  <tr>
                      <td class="font-oskari-g2 text-2xl uppercase">Vorstand</td>
                  </tr>
                  <tr>
                      <td class="font-oskari-g2 text-2xl uppercase">Downloads</td>
                  </tr>
              </table>
                       
          </div>
      </div>
  </div>   

    
  <Footer></Footer>

</body>
</html>
