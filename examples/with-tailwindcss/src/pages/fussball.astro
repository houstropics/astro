    <div class="relative ml-7">
        <div class="text-6xl font-univermag text-primary mb-20">Fotogalerie</div>
    </div>

</section>


	<div class="flex justify-center pb-1">
		<div class="w-3/10 px-2">
			<img src={pregamePic.src} alt="Mannschaft" />
