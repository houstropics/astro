---
import arrow from '../images/arrow.png';

---

<footer class="bg-white font-univermag py-4">
    <div class="flex justify-between mx-7">
        <a href="#" class="hover:underline">Impressum/Privacy</a>
        <span>ASV MALS &copy;</span>
        <div class="absolute inset-y-0 left-1/2 transform -translate-x-1/2 flex items-center"> <!-- Center the arrow both horizontally and vertically -->
            <a href="#" class="hover:text-gray-300" id="backToTop">
                <img src={arrow.src} alt="Arrow" />
            </a>
        </a>
    </div>
    
</footer>

<script>
    document.getElementById("backToTop").addEventListener("click", function(event) {
        event.preventDefault();
        window.scrollTo({
            top: 0,
            behavior: "smooth"
        });
    });
</script>
