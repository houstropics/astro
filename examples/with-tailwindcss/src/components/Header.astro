<script>
	// Get the dropdown trigger element
	const dropdownTrigger = document.querySelector('.relative');

	// Get the dropdown menu
	const dropdownMenu = dropdownTrigger.querySelector('ul');

	// Add event listener to the dropdown trigger for mouseenter event
	dropdownTrigger.addEventListener('mouseenter', () => {
		// Show the dropdown menu
		dropdownMenu.classList.remove('hidden');
	});

	// Add event listener to the dropdown trigger for mouseleave event
	dropdownTrigger.addEventListener('mouseleave', () => {
		// Hide the dropdown menu
		dropdownMenu.classList.add('hidden');
	});
</script>